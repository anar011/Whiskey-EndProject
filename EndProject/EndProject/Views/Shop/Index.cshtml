@model ShopVM

@inject ILayoutService layout
@{
    ViewData["Title"] = "Whiskey - Shop";
    int sumCategoryProductss = 0;
}


<main>
    <section id="main-up">
        <div class="container">
            <div class="row">
                <div class="main-up-contact-name">
                    <h1>Products</h1>
                </div>

                <div class="main-up-contact-signature mt-lg-3">
                    <img src="~/assets/img/main-line2.svg" alt="">
                </div>

                <div class="main-up-contact-descriptions">
                    <div class="main-up-contact-description">
                        <p>
                            Aptent cras eget convallis curae consectetur ipsum porttitor scelerisque leo curabitur
                            cras hendrerit torquent lobortis elementum malesuada.
                        </p>
                    </div>
                </div>

            </div>
        </div>

    </section>

    <section id="background-img">
        <div class="background-img-one">
            <img src="~/assets/img/main-back-img2.svg" alt="">
        </div>
    </section>

    <section id="main-product-showing">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-sm-12 col-md-4 mt-5">
                    <div class="products-category-name mt-5">

                        <div class="products-category d-flex">
                            <p>Category</p>
                        </div>
                        
                        @foreach (var item in Model.Categories)
                        {
                            sumCategoryProductss += (int)item.ProductCategories?.Count();
                        }
                        <form asp-controller="shop" asp-action="index" asp-route-categoryId=" ">
                            <div class="products-category-all categories d-flex product-category">
                                <button style="margin:0;padding:0;display:inherit;border:none;background:transparent;color: #ca8f65;" class="category">All</button>
                                <p>(@sumCategoryProductss)</p>
                            </div>
                        </form>
                        @foreach (var item in Model.Categories)
                        {
                            <form asp-controller="shop" asp-action="index" asp-route-categoryId="@item.Id">
                                <div class="products-category-all categories d-flex product-category">
                                    <button style="margin:0;padding:0;display:inherit;border:none;background:transparent;color: #ca8f65;" class="category">@item.Name</button>
                                    <p>(@item.ProductCategories?.Count())</p>
                                </div>
                            </form>

                       

                        }
               

                    

                    </div>

                </div>

                <div class="col-lg-4 col-sm-12 col-md-4  mt-5">
                    <div class="products-capacity-name mt-5">

                        <div class="products-category d-flex">
                            <p>Capacity</p>
                        </div>



                        <form asp-controller="shop" asp-action="index" asp-route-capacityId="1">
                            <div class="products-category-all categories d-flex">
                                <button style="margin:0;padding:0;display:inherit;border:none;background:transparent;color: #ca8f65;" class="category">1</button>
                                <p>(L)</p>
                            </div>
                        </form>
                        <form asp-controller="shop" asp-action="index" asp-route-capacityId="2">
                            <div class="products-category-all categories d-flex">
                                <button style="margin:0;padding:0;display:inherit;border:none;background:transparent;color: #ca8f65;" class="category">700</button>
                                <p>(ML)</p>
                            </div>
                        </form>
                        <form asp-controller="shop" asp-action="index" asp-route-capacityId="3">
                            <div class="products-category-all categories d-flex">
                                <button style="margin:0;padding:0;display:inherit;border:none;background:transparent;color: #ca8f65;" class="category">500</button>
                                <p>(ML)</p>
                            </div>
                        </form>
                        <form asp-controller="shop" asp-action="index" asp-route-capacityId="4">
                            <div class="products-category-all categories d-flex">
                                <button style="margin:0;padding:0;display:inherit;border:none;background:transparent;color: #ca8f65;" class="category">300</button>
                                <p>(ML)</p>
                            </div>
                        </form>
                     

                     




                    </div>

                </div>

                <div class="col-lg-4 col-sm-12 col-md-4 mt-5">
                    <div class="products-filtered-name mt-5">
                        <div class="container">
                            <header>
                                <h2>
                                    Price

                                    </h1>

                            </header>
                            <price-range currency="$">
                                <div class="mt-5">
                                    <div>
                                        <input name="price-from"
                                               type="range"
                                               min="0"
                                               max="100"
                                               step="1"
                                               value="25"
                                               aria-label="From" />
                                        <input name="price-to"
                                               type="range"
                                               min="0"
                                               max="100"
                                               step="1"
                                               value="75"
                                               aria-label="To" />
                                    </div>
                                </div>
                                <output>
                                    output
                                </output>
                            </price-range>

                        </div>




                    </div>



                </div>


            </div>
        </div>
    </section>

    <section id="main-products">
        <div class="main-product">
            <div class="container">
                <div class="row">
               



                    <!-- // Begin PRODUCT// -->

                    <div class="products-whiskeys mt-5 row product-list">


                        <partial name="_ProductsPartial" model="Model.PaginateDatas" />


                       
  


                    </div>

                    <!-- //End PRODUCT// -->
                    <!-- // Begin Pagination // -->

                    <div class="paginations mt-5">
                        <div class="pagination">
                            <a href="#">&laquo;</a>
                            <a href="#">1</a>
                            <a class="active" href="#">2</a>

                            <a href="#">&raquo;</a>
                        </div>

                    </div>

                    <!-- // End Pagination // -->


                </div>
            </div>
        </div>
    </section>

    <section id="background-img-three">
        <div class="back-img mt-5">
            <img src="~/assets/img/main-back-img1.svg" alt="">

        </div>
    </section>


</main>

@section Scripts{
    <script src="~/assets/js/product.js"></script>
}
