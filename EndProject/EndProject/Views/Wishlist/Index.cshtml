@model List<WishlistItem>


@{
    ViewData["Title"] = "Whiskey - Wishlist";
}


<main>

    <section id="main-up">
        <div class="container">
            <div class="row">
                <div class="main-up-contact-name">
                    <h1>Wishlist</h1>
                </div>

                <div class="main-up-contact-titles">
                    <div class="main-up-contact-title">
                        <a asp-controller="home" asp-action="index"><span>Home</span></a>
                        <hr>
                        <span>></span>
                        <span>Wishlist</span>

                    </div>
                </div>

            </div>
        </div>

    </section>

    <section id="background-img">
        <div class="background-img-one">
            <img src="~/assets/img/main-back-img2.svg" alt="">
        </div>
    </section>


    <section id="wishlist-products">
        <div class="container">
            <div class="wishlist-products mt-5">
                <table class="table" style="color:white">
                    <thead>
                        <tr>
                            <th scope="col">Product</th>
                            <th scope="col">Name</th>
                            <th scope="col">Price</th>
                            <th scope="col"><button class="btn btn-primary clear-btn" style="background-color:#343333; border:none;" >Clear</button></th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="col">@item.Product.Name</th>
                                <th scope="col">@item.Product.Name</th>
                                <th scope="col">@item.Product.ProductCapacities.First().Price</th>
                                <th scope="col"><a asp-controller="wishlist" asp-action="RemoveFromWishList" asp-route-wishListItemId="@item.Id" class="btn btn-danger clear-btn">Clear</a></th>
                            </tr>
                        }
                    </tbody>
                    <tr>
                        <td>
                            <button class="btn btn-primary btn" style="background-color:#343333;"><a asp-controller="shop" asp-action="index" style="text-decoration:none; color: white;">Continue shopping</a></button>
                        </td>
                        <td></td>
                        <td></td>

                    </tr>
                </table>
            </div>
        </div>
    </section>



    <section id="main">
        <div class="container ">
            <div class="row">
                <div class="main-up d-none">
                    <button class="buttons">
                        <h2>Your wishlist is empty.</h2>
                    </button>
                    <div class="mt-3">
                        <a href="file:///C:/Users/HP/Desktop/%D0%9D%D0%BE%D0%B2%D0%B0%D1%8F%20%D0%BF%D0%B0%D0%BF%D0%BA%D0%B0/EndProject/product.html">
                            <button>
                                Go
                                to shop
                            </button>
                        </a>
                    </div>



                </div>

            </div>
        </div>

    </section>

    <section id="background-img">
        <div class="background-img-two mt-5">
            <img src="~/assets/img/main-back-img1.svg" alt="">
        </div>
    </section>



</main>







@section Scripts{
    <script src="~/assets/js/wishlist.js"></script>
}
