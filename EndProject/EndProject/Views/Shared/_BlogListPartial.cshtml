@model List<Blog>

    
                    @foreach (var blog in Model)
                    {
                        <div class="col-lg-4 col-sm-12 col-md-6  homes-blogs-hover mt-4">

                            <div class="card home-blog" style="width: 24rem;">
                                <a asp-controller="Blog" asp-action="BlogDetail" asp-route-id="@blog.Id"><i class="fa-solid fa-circle-plus"></i></a>
                                <img src="~/assets/img/@blog.Image" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <span><i class="fa-regular fa-user"></i></span>
                                    <span>admin on</span>
                                    <span><i class="fa-regular fa-clock"></i> December 30, 2021</span>
                                    <br> <br>
                                    <span>@blog.Name</span>
                                    <br>
                                    <br>
                                </div>
                            </div>

                        </div>
                    }
              