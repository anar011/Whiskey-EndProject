@model List<ProductComment>

@{
    ViewData["Title"] = "Index";
}
@section Css{
    <link rel="stylesheet" href="~/admin/assets/css/index.css">
}



<section class="pcoded-main-container">

    <div class="pcoded-content">
        <div class="row">
            <div class="col-12">
                <div class="card">

                    @if (User.IsInRole("SuperAdmin"))
                    {
                        <div class="card-header">
                            <a asp-action="Create" data-toggle="tooltip" data-original-title="Create" class="create"><i class="fa-solid fa-square-plus fa-lg" style="color: #105ada;"></i></a>
                        </div>
                    }
                    <div class="card-body table-border-style">
                        <a class="btn btn-success text-white" asp-action="Create" style="float:right;">Create</a>
                        <div class="table-responsive">
                            @if (Model.Count() > 0)
                            {
                                <table class="table">
                                    <thead>
                                        <tr>

                                            <th>User Name</th>
                                            <th>Comment</th>
                                            <th>Product Name</th>
                                            <th>Options</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var comment in Model)
                                        {
                                            <tr data-id="@comment.Id">

                                                <td>@comment.Name</td>
                                                <td>@comment.Message</td>
                                                <td>@comment.Product.Name</td>


                                                <td>
                                                    <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@comment.Id">Info</a>
                                                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@comment.Id">Edit</a>
                                                    <form style="display: inline-block;" asp-action="Delete" asp-route-id="@comment.Id" method="post">
                                                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



@section Script{
    <script src="~/admin/assets/js/index.js"></script>
}