@model Contact
@{
    ViewData["Title"] = "Detail";
}

<div class="container my-5">
  
    <form method="post" asp-action="Detail">

        <div class="form-group">
            <label class="my-2">Title</label>
            <input class="form-control" disabled id="customFile" asp-for="Name" />
        </div>


        <div class="form-group">
            <label class="my-2">Email</label>
            <input class="form-control" disabled id="customFile" asp-for="Email" />
        </div>

        <div class="form-group">
            <label class="my-2">Subject</label>
            <input class="form-control" disabled id="description-text" asp-for="Subject" />
        </div>

        <div class="form-group">
            <label class="my-2">Message</label>
            <input class="form-control" disabled id="customFile" asp-for="Message" />
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="IsReply" disabled /> @Html.DisplayNameFor(model => model.IsReply)
            </label>
        </div>

        @if (Model.IsReply == false)
        {
            <div class="form-group">
                <label>
                    Reply
                    <span class="text-danger">*</span>
                </label>
                <textarea name="replace" cols="41" rows="7"></textarea>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        }
        else
        {
            <div class="alert alert-warning" role="alert">
                You have replied to the message
            </div>
        }
    </form>


    <a class="btn btn-info mt-3" asp-action="Index">Back</a>
</div>
