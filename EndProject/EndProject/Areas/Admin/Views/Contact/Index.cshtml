
@model IEnumerable<Contact>
@{
    ViewData["Title"] = "Index";
}


@section Css{
    <link rel="stylesheet" href="~/admin/assets/css/index.css">
}

<section class="pcoded-main-container">

    <div class="pcoded-content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                   
                    @if (User.IsInRole("SuperAdmin"))
                    {
                        <div class="card-header">
                            <a asp-action="Create" data-toggle="tooltip" data-original-title="Create" class="create"><i class="fa-solid fa-square-plus fa-lg" style="color: #105ada;"></i></a>
                        </div>
                    }
                    <div class="card-body table-border-style">
                       
                        <div class="table-responsive">
                            @if (Model.Count() > 0)
                            {
                                <table class="table">
                                    <thead>
                                        <tr>
                                         
                                                                                                                    
                                            <th>Name</th>
                                            <th>Email</th>
                                    
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var contact in Model)
                                        {
                                            <tr data-id="@contact.Id">
                                            
                                                <td class="py-1">
                                                    @contact.Name
                                                </td>
                                                <td class="py-1">
                                                    @contact.Email
                                                </td>
                            
                                          

                                                <td>
                                                    <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@contact.Id">Info</a>                                              
                                                    <form style="display: inline-block;" asp-action="Delete" asp-route-id="@contact.Id" method="post">
                                                        <button type="submit" class="btn btn-outline-danger">delete</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Script{
    <script src="~/admin/assets/js/customer.js"></script>
}


