@model ProductDetailVM
@{
    ViewData["Title"] = "Detail";
}
@section Css{
    <link rel="stylesheet" href="~/admin/assets/css/index.css">

}
<section class="pcoded-main-container">
    <div class="pcoded-content">
        <div class="row">
            <div class="col-12">
             
                    <div class="slider-content">
                        <img src="~/assets/img/@Model.Image" style="width:100px;height:100px;" />
                    </div>
                <span class="text-danger">@ViewBag.error</span>
                <form asp-action="Detail">
                    <span class="text-danger">@ViewBag.error</span>
       
                    <div class="form-group">
                        <label>Title</label>
                        <input disabled class="form-control" asp-for="Name">
                    </div>
                    <div class="form-group">
                        <label>Price</label>
                        <input disabled class="form-control" asp-for="Price">
                    </div>
                    <div class="form-group">
                        <label>Stock Count</label>
                        <input disabled class="form-control" asp-for="StockCount">
                    </div>
                    <div class="form-group">
                        <label>Sale Count</label>
                        <input disabled class="form-control" asp-for="SaleCount" type="number" />
                    </div>
                    <div class="form-group">
                        <label>Category Name</label>
                        <input disabled class="form-control" value="@string.Join(",", Model.CategoryNames.Select(pc=>pc.Category.Name))">
                    </div>
           
                    <div class="form-group">
                        <label>Capacity Name</label>
                        <input disabled class="form-control" value="@string.Join(",", Model.CapacityNames.Select(pc=>pc.Capacity.Name))">
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea disabled class="form-control" rows="3" asp-for="Description"></textarea>
                    </div>
                    <a asp-action="Index" asp-route-page="@ViewBag.page" class="btn btn-success"><i class="feather mr-2 icon-check-circle"></i>Go to list</a>
                </form>

            </div>
        </div>
    </div>
</section>

@section Script{
    <script src="~/admin/assets/js/index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}


