@model ProductCreateVM
@{
    ViewData["Title"] = "Create";
}
<section class="pcoded-main-container">
    <div class="pcoded-content">
        <div class="row">
            <div class="col-12">
                <form method="post" enctype="multipart/form-data" asp-action="Create">
                    <span class="text-danger">@ViewBag.error</span>
                    <div class="form-group">
                        <label>Image</label>
                        <input type="file" class="form-control" asp-for="Photo">
                        <span class="text-danger" asp-validation-for="Photo"></span>
                    </div>
                    <div class="form-group">
                        <label>Title</label>
                        <input type="text" class="form-control" asp-for="Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label>Price</label>
                        <input class="form-control" asp-for="Price" type="number" step=".01"/>
                        <span class="text-danger" asp-validation-for="Price"></span>
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea class="form-control" rows="3" asp-for="Description"></textarea>
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>
                    <div class="form-group">
                        <label>Stock Count</label>
                        <input class="form-control" asp-for="StockCount" type="number"/>
                        <span class="text-danger" asp-validation-for="StockCount"></span>
                    </div>
                    <div class="form-group">
                        <label>Sale Count</label>
                        <input class="form-control" asp-for="SaleCount" type="number" />
                        <span class="text-danger" asp-validation-for="SaleCount"></span>
                    </div>

                    <div class="form-group">
                        <label>Capacities</label>
                        <select class="form-control" asp-for="CapacityIds" asp-items="@ViewBag.capacities"></select>
                        <span class="text-danger" asp-validation-for="CapacityIds"></span>
                    </div>
                    <div class="form-group">
                        <label>Categories</label>
                        <select class="form-control" asp-for="CategoryIds" asp-items="@ViewBag.categories"></select>
                        <span class="text-danger" asp-validation-for="CategoryIds"></span>
                    </div>
                    <button type="submit" class="btn btn-success"><i class="feather mr-2 icon-check-circle"></i>Submit</button>
                    <a asp-action="Index" class="btn btn-danger"><i class="feather mr-2 icon-check-circle"></i>Cancel</a>
                </form>
            </div>
        </div>

    </div>
</section>

