@model BlogDetailVM
@{
    ViewData["Title"] = "Detail";
}

@section Css{
    <link rel="stylesheet" href="~/admin/assets/css/index.css">
}

<section class="pcoded-main-container">
    <div class="pcoded-content">
        <div class="row">
            <div class="col-12">
                <div class="slider-content">
                    <img src="~/assets/img/@Model.Image" style="width:100px;height:100px;" />
                </div>
                <span class="text-danger "></span>
                <form method="post" enctype="multipart/form-data" asp-action="Edit">
                    <span class="text-danger">@ViewBag.error</span>
                    <div class="form-group">
                        <label>Title</label>
                        <input disabled class="form-control" asp-for="Title">
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea disabled class="form-control" rows="3" asp-for="Description"></textarea>
                    </div>
                    <a asp-action="Index" class="btn btn-success"><i class="feather mr-2 icon-check-circle"></i>Go to list</a>
                </form>
            </div>
        </div>
    </div>
</section>

@section Script{
    <script src="~/admin/assets/js/index.js"></script> 
}


